@model trilha_net_azure.Models.DbHrContext.Employee

@{
    ViewData["Title"] = "Add Employee";
    ViewBag.IncludeHeader = true;
    ViewBag.IncludeFooter = true;
    var errorMessage = TempData["ErrorMessage"];
}

<div class="flex h-lvh">
    <div class="m-auto w-full max-w-2xl rounded-lg bg-white p-4 shadow-lg">
        <h2 class="mb-6 text-center text-3xl font-bold text-gray-900">Add New Employee</h2>
        
        <form asp-action="CreateEmployee" asp-controller="Portal" method="post" class="space-y-6">
            <div asp-validation-summary="All" class="mb-4 text-red-500"></div>

            @if(errorMessage != null)
            {
                <p class="text-center text-red-600">@errorMessage</p>
            }
            <div>
                <label class="block text-lg font-semibold text-gray-700">Name</label>
                <input type="text" asp-for="Name" class="w-full rounded-lg border px-4 py-2 focus:outline-none focus:ring focus:ring-amber-300" required />
            </div>

            <div>
                <label class="block text-lg font-semibold text-gray-700">Address</label>
                <input type="text" asp-for="Address" class="w-full rounded-lg border px-4 py-2 focus:outline-none focus:ring focus:ring-amber-300" required />
            </div>

            <div>
                <label class="block text-lg font-semibold text-gray-700">Extension</label>
                <input type="text" asp-for="Extension" class="w-full rounded-lg border px-4 py-2 focus:outline-none focus:ring focus:ring-amber-300" />
            </div>

            <div>
                <label class="block text-lg font-semibold text-gray-700">Email</label>
                <input type="email" asp-for="Email" class="w-full rounded-lg border px-4 py-2 focus:outline-none focus:ring focus:ring-amber-300" required />
            </div>

            <div>
                <label class="block text-lg font-semibold text-gray-700">Department</label>
                <input type="text" asp-for="Department" class="w-full rounded-lg border px-4 py-2 focus:outline-none focus:ring focus:ring-amber-300" required />
            </div>

            <div>
                <label class="block text-lg font-semibold text-gray-700">Salary</label>
                <input type="number" asp-for="Salary" class="w-full rounded-lg border px-4 py-2 focus:outline-none focus:ring focus:ring-amber-300" required step="0.01" />
            </div>

            <div>
                <label class="block text-lg font-semibold text-gray-700">Admission Date</label>
                <input type="date" asp-for="AdmissionDate" class="w-full rounded-lg border px-4 py-2 focus:outline-none focus:ring focus:ring-amber-300" required />
            </div>

            <button type="submit" class="w-full rounded-lg bg-amber-400 px-6 py-3 text-lg font-semibold text-gray-900 transition hover:bg-amber-500">
                Add Employee
            </button>
        </form>
    </div>
</div>