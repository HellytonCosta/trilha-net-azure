@model trilha_net_azure.Models.DbHrContext.Employee

@{
    ViewData["Title"] = "Edit Employee";
    ViewBag.IncludeHeader = true;
    ViewBag.IncludeFooter = true;
    var errorMessage = TempData["ErrorMessage"];
    var successMessage = TempData["SuccessMessage"];
}

<div class="flex h-lvh">
    <div class="m-auto w-full max-w-2xl rounded-lg bg-white p-4 shadow-lg">
        <h2 class="mb-6 text-center text-2xl font-bold text-gray-900">Are you sure you want to delete this Employee?</h2>
        
        <form asp-action="DeleteEmployee" asp-controller="Portal" method="post" class="space-y-6">
            <div asp-validation-summary="All" class="mb-4 text-red-500"></div>

            @if(errorMessage != null)
            {
                <p class="text-center text-red-600">@errorMessage</p>
            }
            @if (successMessage != null)
            {
                <p class="text-center text-green-400">@successMessage</p>
            }
            <div>
                <label class="block text-lg font-semibold text-gray-700">Name</label>
                <input type="text" disabled asp-for="Name" class="w-full rounded-lg border bg-gray-200 px-4 py-2 focus:outline-none focus:ring focus:ring-amber-300" required />
            </div>

            <div>
                <label class="block text-lg font-semibold text-gray-700">Address</label>
                <input type="text" disabled asp-for="Address" class="w-full rounded-lg border bg-gray-200 px-4 py-2 focus:outline-none focus:ring focus:ring-amber-300" required />
            </div>

            <div>
                <label class="block text-lg font-semibold text-gray-700">Extension</label>
                <input type="text" disabled asp-for="Extension" class="w-full rounded-lg border bg-gray-200 px-4 py-2 focus:outline-none focus:ring focus:ring-amber-300" />
            </div>

            <div>
                <label class="block text-lg font-semibold text-gray-700">Email</label>
                <input type="email" disabled asp-for="Email" class="w-full rounded-lg border bg-gray-200 px-4 py-2 focus:outline-none focus:ring focus:ring-amber-300" required />
            </div>

            <div>
                <label class="block text-lg font-semibold text-gray-700">Department</label>
                <input type="text" disabled asp-for="Department" class="w-full rounded-lg border bg-gray-200 px-4 py-2 focus:outline-none focus:ring focus:ring-amber-300" required />
            </div>

            <div>
                <label class="block text-lg font-semibold text-gray-700">Salary</label>
                <input type="number" disabled asp-for="Salary" class="w-full rounded-lg border bg-gray-200 px-4 py-2 focus:outline-none focus:ring focus:ring-amber-300" required step="0.01" />
            </div>

            <div>
                <label class="block text-lg font-semibold text-gray-700">Admission Date</label>
                <input type="date" disabled asp-for="AdmissionDate" class="w-full rounded-lg border bg-gray-200 px-4 py-2 focus:outline-none focus:ring focus:ring-amber-300" required />
            </div>
            <input asp-for="Id" type="hidden" />
            <button type="submit" class="w-full rounded-lg bg-red-600 px-6 py-3 text-lg font-semibold text-gray-900 transition hover:bg-red-500">
                Delete Employee
            </button>
        </form>
    </div>
</div>